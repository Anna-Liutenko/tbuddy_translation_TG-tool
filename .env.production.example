# T.Buddy Translation Tool - Production Environment Template
# Copy this file to .env.production and configure for production deployment

# Telegram Bot Configuration
TELEGRAM_API_TOKEN=YOUR_PRODUCTION_TELEGRAM_BOT_TOKEN

# Copilot Studio Direct Line API
DIRECT_LINE_SECRET=YOUR_PRODUCTION_DIRECT_LINE_SECRET

# GitHub Integration (for status checking feature)
# Get token from: https://github.com/settings/tokens  
# Required scopes: repo (for private repos) or public_repo (for public repos)
GITHUB_TOKEN=YOUR_PRODUCTION_GITHUB_TOKEN

# Production Server Configuration
PORT=8080
USE_WAITRESS=0
DEBUG_LOCAL=0
DEBUG_VERBOSE=0
LOG_LEVEL=INFO

# Production Database Configuration
DATABASE_URL=sqlite:///YOUR_PRODUCTION_DATABASE_PATH_HERE

# Production Webhook Configuration
WEBHOOK_URL=https://YOUR_PRODUCTION_DOMAIN.com/webhook

# Production Security Settings
SSL_VERIFY=1
SECURE_HEADERS=1

# Production Performance Settings
GUNICORN_WORKERS=3
GUNICORN_TIMEOUT=30
MAX_CONNECTIONS=100

# Production Monitoring
ENABLE_METRICS=1
LOG_TO_FILE=1
LOG_FILE_PATH=/var/log/tbuddy/app.log

# Group Chat Configuration
# Controls whether bot processes all messages or only commands in group chats
# Recommended: true for full translation service, false for minimal bot activity
ENABLE_GROUP_CHAT_PROCESSING=true