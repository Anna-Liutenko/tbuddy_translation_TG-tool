# Testing Environment Configuration for Telegram Translation Bot
# This file contains test-specific environment variables for local testing

# Telegram API (placeholder for testing - not needed for local simulation)
TELEGRAM_API_TOKEN=test_token_placeholder

# Direct Line API (REQUIRED - replace with your actual Direct Line secret)
# Get this from Copilot Studio -> Settings -> Channels -> Direct Line
DIRECT_LINE_SECRET=your_direct_line_secret_here

# Debug and Logging Configuration
DEBUG_LOCAL=1
DEBUG_VERBOSE=1
TELEGRAM_LOG_RESPONSES=1
USE_WAITRESS=0
LOG_LEVEL=DEBUG

# Database Configuration for Testing
DATABASE_URL=sqlite:///test_chat_settings.db

# Test Server Configuration
TEST_SERVER_PORT=5000
TEST_SERVER_HOST=127.0.0.1

# Testing Flags
TESTING=1
TEST_DATABASE_PATH=test_chat_settings.db